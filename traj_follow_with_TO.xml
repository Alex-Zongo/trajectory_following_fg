<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="http://jsbsim.sf.net/JSBSimScript.xsl"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://jsbsim.sf.net/JSBSimScript.xsd"
    name="Cruise flight with steady turn in 737.">

  <description>

  </description>

  <use aircraft="c310" initialize="737_traj_init_with_TO"/>

  <run start="0" end="1000" dt="0.02">

    <!-- <property value="0"> simulation/notify-time-trigger </property> -->

    <event name="Start the engine">
      <description>
        Start the engine and set initial heading, waypoint and turn on heading-hold mode.
      </description>
      <condition> simulation/sim-time-sec ge 0.25 </condition>
      <!-- <set name="fcs/right-brake-cmd-norm" value="0"/>
      <set name="fcs/left-brake-cmd-norm" value="0"/> -->
      <!-- <set name="propulsion/engine[0]/set-running" value="1"/>
      <set name="propulsion/engine[1]/set-running" value="1"/> -->
      <set name="fcs/mixture-cmd-norm[0]" value="1"/>
      <set name="fcs/mixture-cmd-norm[1]" value="1"/>
      <set name="fcs/advance-cmd-norm[0]" value="1.0"/>
      <set name="fcs/advance-cmd-norm[1]" value="1.0"/>
      <set name="propulsion/magneto_cmd" value="3"/>
      <set name="propulsion/starter_cmd" value="1"/>

      <set name="fcs/throttle-cmd-norm[0]" value="1.0"/>
      <set name="fcs/throttle-cmd-norm[1]" value="1.0"/>


      <set name="ap/altitude_setpoint" value="12780" action="FG_EXP" tc="2.0" />
      <set name="ap/attitude_hold" value="0"/>

      <set name="guidance/target_wp_longitude_rad" value="2.032707045838"/>
      <set name="guidance/target_wp_latitude_rad" value="0.693808993573"/>

      <set name="ap/heading_setpoint" value="355.0"/>
      <set name="ap/heading-setpoint-select" value="0"/>
      <set name="ap/heading_hold" value="1"/>
      <set name="ap/active-waypoint" value="0"/>

      <notify>
       <property caption="longitude">position/long-gc-rad</property>
        <property caption="latitude">position/lat-gc-rad</property>
        <property caption="altitude">position/h-sl-ft</property>
        <property caption="airspeed">velocities/vtrue-fps</property>
        <property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>

    <!--
      For "do_simple_trim" (Classic trim):
      0: Longitudinal
      1: Full
      2: Ground
      3: Pullup
      4: Custom
      5: Turn
      6: None
    -->
    <event name="Reach Altitude of 12,780 ft">
      <condition>velocities/vc-fps ge 145.0</condition>
      <set name="ap/altitude_hold" value="1" />

      <notify>
        <property caption="longitude">position/long-gc-rad</property>
        <property caption="latitude">position/lat-gc-rad</property>
        <property caption="altitude">position/h-sl-ft</property>
        <property caption="airspeed">velocities/vtrue-fps</property>
        <property caption="sim-time">simulation/sim-time-sec</property>
      </notify>

    </event>

    <event name="Raise landing gear">
      <condition>position/h-agl-ft  ge  40</condition>
      <set name="gear/gear-cmd-norm" value="0"/>
      <notify>
        <property caption="longitude">position/long-gc-rad</property>
        <property caption="latitude">position/lat-gc-rad</property>
        <property caption="altitude">position/h-sl-ft</property>
        <property caption="airspeed">velocities/vtrue-fps</property>
        <property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>

    <event name="Head to Waypoint 1">
      <description>
        Set heading hold to selected waypoint (setpoint) instead of
        previously specified heading when altitude surpasses 12,500 ft
      </description>
      <condition>
        position/h-sl-ft ge 12500
      </condition>
      <set name="gear/gear-cmd-norm" value="0"/>
      <set name="ap/heading-setpoint-select" value="1"/>
	    <set name="ap/active-waypoint" value="1"/>
      <!-- <set name="simulation/do_simple_trim" value="5"/> -->
      <!-- <delay>5.0</delay> -->
      <!-- <set name="ap/altitude_setpoint" value=""/> -->
      <notify>

        <property caption="longitude">position/long-gc-rad</property>
        <property caption="latitude">position/lat-gc-rad</property>
        <property caption="altitude">position/h-sl-ft</property>
        <property caption="airspeed">velocities/vtrue-fps</property>
        <property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>


    <event name="terminate the simulation">
			<condition>
				guidance/wp-distance lt 300
        ap/active-waypoint eq 4
			</condition>
			<set name="simulation/terminate" value="1"/>
			<notify>
				<property caption="longitude">position/long-gc-rad</property>
				<property caption="latitude">position/lat-gc-rad</property>
				<property caption="altitude">position/h-sl-meters</property>
				<property caption="airspeed">velocities/vtrue-fps</property>
        <property>velocities/vt-fps</property>
				<property caption="sim-time">simulation/sim-time-sec</property>
			</notify>
		</event>


    <event name="set the 4th waypoint">
      <condition>
        guidance/wp-distance le 700
        ap/active-waypoint eq 3
      </condition>
      <set name="ap/altitude_setpoint" action="FG_EXP" value="20747" tc="0.5"/>
      <set name="guidance/target_wp_longitude_rad" value="2.015932649509"/>
			<set name="guidance/target_wp_latitude_rad" value="0.697542649127"/>

      <set name="ap/active-waypoint" value="4"/>
      <notify>
        <property caption="longitude">position/long-gc-rad</property>
				<property caption="latitude">position/lat-gc-rad</property>
				<property caption="altitude">position/h-sl-meters</property>
				<property caption="airspeed">velocities/vtrue-fps</property>
        <property>velocities/vt-fps</property>
				<property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>

    <event name="set the 3rd waypoint">
      <condition>
        guidance/wp-distance le 700
        ap/active-waypoint eq 2
      </condition>
      <set name="ap/altitude_setpoint" action="FG_EXP" value="14500" tc="0.5"/>
      <set name="guidance/target_wp_longitude_rad" value="2.024994513224"/>
			<set name="guidance/target_wp_latitude_rad" value="0.693454835693"/>

      <set name="ap/active-waypoint" value="3"/>
      <notify>
        <property caption="longitude">position/long-gc-rad</property>
				<property caption="latitude">position/lat-gc-rad</property>
				<property caption="altitude">position/h-sl-meters</property>
				<property caption="airspeed">velocities/vtrue-fps</property>
        <property>velocities/vt-fps</property>
				<property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>

    <event name="set the last 2nd waypoint">
      <condition>
        guidance/wp-distance le 600
        ap/active-waypoint eq 1
      </condition>
      <!-- <set name="ap/altitude_setpoint" action="FG_EXP" /> -->
      <set name="guidance/target_wp_longitude_rad" value="2.025586919342"/>
			<set name="guidance/target_wp_latitude_rad" value="0.693397038373"/>


			<!-- <set name="ap/altitude_setpoint" value="12782.657665623867" action="FG_EXP" tc="0.5"/> -->
      <set name="ap/active-waypoint" value="2"/>
      <notify>
        <property caption="longitude">position/long-gc-rad</property>
				<property caption="latitude">position/lat-gc-rad</property>
				<property caption="altitude">position/h-sl-meters</property>
				<property caption="airspeed">velocities/vtrue-fps</property>
        <property>velocities/vt-fps</property>
				<property caption="sim-time">simulation/sim-time-sec</property>
      </notify>
    </event>



    <!-- <event name="Repeating Notify" persistent="true">
      <description>Output message at 5 second intervals</description>
      <notify>

        <property>guidance/wp-distance</property>
        <property>guidance/wp-heading-deg</property>
				<property caption="sim-time">simulation/sim-time-sec</property>
        <property>velocities/vt-fps</property>
        <property caption="airspeed">velocities/vtrue-fps</property>
        <property>position/h-sl-ft</property>
      </notify>
      <condition> simulation/sim-time-sec >= simulation/notify-time-trigger </condition>
      <set name="simulation/notify-time-trigger" value="5" type="FG_DELTA"/>
    </event> -->

  </run>

</runscript>
